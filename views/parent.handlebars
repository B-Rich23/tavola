{{!-- Add form that will capture the values that will be used by the parent_input.js file to populate the student.js model via a POST request   --}}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Create Student</h2>
            <form>
                <div class="form-group">
                    <label for="exampleInputFirstname1">Student First Name</label>
                    <input type="firstname" class="form-control" id="firstname-input" placeholder="First Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputLastname1">Student Last Name</label>
                    <input type="lastname" class="form-control" id="lastname-input" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputBirthdate1">Student's Birthdate</label>
                    <input type="birthdate" class="form-control" id="birthdate-input" placeholder="Date of Birth">
                </div>
                <div class="form-group">
                    <label for="exampleInputParentId1">Parent's ID</label>
                    <input type="parentId" class="form-control" id="parent-ID" placeholder="Parent ID">
                </div>
                <div class="form-group">
                    <label for="exampleInputStaffId1">Staff's ID</label>
                    <input type="staffId" class="form-control" id="staff-ID" placeholder="Staff ID">
                </div>
                <div class="form-check form-check-inline">
                    <label for="exampleInputStaffId1">Does the student suffer from Asthma?</label>
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="true">
                    <label class="form-check-label" for="inlineCheckbox1">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="false">
                    <label class="form-check-label" for="inlineCheckbox2">No</label>
                </div>
                <div class="form-group">
                    <label for="exampleInputStaffId1">Student's Allergies</label>
                    <input type="allergies" class="form-control" id="student-allergies" placeholder="Student Allergies">
                </div>
                <div class="form-check form-check-inline">
                    <label for="exampleInputStaffId1">Does the student require an epiPen due to severe allergies?</label>
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="true">
                    <label class="form-check-label" for="inlineCheckbox1">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="false">
                    <label class="form-check-label" for="inlineCheckbox2">No</label>
                </div>
                <div class="form-group">
                    <label for="exampleInputBirthdate1">Chronic Conditions</label>
                    <input type="chronic" class="form-control" id="chronic-condition" placeholder="Chronic Conditions">
                </div>
                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span>
                    <span class="msg"></span>
                </div>
                <button type="submit" class="btn btn-default">Sign Up</button>
            </form>
        </div>
    </div>
</div>


{{!-- Add form that will capture the values that will be used by the parent_input.js file to populate the parent.js model
via a POST request --}}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Parent Sign-up</h2>
            <form>
                <div class="form-group">
                    <label for="exampleInputFirstname1">Parent First Name</label>
                    <input type="firstname" class="form-control" id="firstname-input" placeholder="First Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputLastname1">Parent Last Name</label>
                    <input type="lastname" class="form-control" id="lastname-input" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputPhoneNumber">Parent Phone Number</label>
                    <input type="phone" class="form-control" id="phonenumber-input" placeholder="XXX-XXX-XXXX">
                </div>
                <div>
                    <label for="exampleInputAsthmaId1">Does the parent consent to staff administered medical treatment?</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input medconsent" type="checkbox" id="inlineCheckbox1" value="true">
                    <label class="form-check-label" for="inlineCheckbox1">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input medconsent" type="checkbox" id="inlineCheckbox2" value="false">
                    <label class="form-check-label" for="inlineCheckbox2">No</label>
                </div>
                <br>
                <br>
                <div>
                    <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>




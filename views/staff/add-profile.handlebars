{{> nav-staff-block}}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <br>
            <h2>Create Student</h2>
            <form>
                <div class="form-group">
                    <label for="exampleInputFirstname1">Student First Name</label>
                    <input type="firstname" class="form-control" id="firstname-input" placeholder="First Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputLastname1">Student Last Name</label>
                    <input type="lastname" class="form-control" id="lastname-input" placeholder="Last Name">
                </div>
                <div class="form-group">
                    <label for="exampleInputBirthdate1">Student Birthdate</label>
                    <input type="birthdate" class="form-control" id="birthdate-input" placeholder="MM/DD/YYYY">
                </div>
                <div class="form-group">
                    <label for="exampleInputParentId1">Parent ID</label>
                    <input type="parentId" class="form-control" id="parent-ID" placeholder="Parent ID">
                </div>
                <div class="form-group">
                    <label for="exampleInputStaffId1">Staff ID</label>
                    <input type="staffId" class="form-control" id="staff-ID" placeholder="Staff ID">
                </div>
                <div>
                    <label for="exampleInputAsthmaId1">Does the student suffer from Asthma?</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input asthma" type="checkbox" id="inlineCheckbox1" value="true">
                    <label class="form-check-label" for="inlineCheckbox1">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input asthma" type="checkbox" id="inlineCheckbox2" value="false">
                    <label class="form-check-label" for="inlineCheckbox2">No</label>
                </div>
                <br>
                <br>
                <div class="form-group">
                    <label for="exampleInputAllergyId1">Student Allergies</label>
                    <input type="allergies" class="form-control" id="student-allergies" placeholder="Student Allergies">
                </div>
                <div>
                    <label for="exampleInputEpipenId1">Does the student require an epiPen due to severe allergies?</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input epipen" type="checkbox" id="inlineCheckbox1" value="true">
                    <label class="form-check-label" for="inlineCheckbox1">Yes</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input epipen" type="checkbox" id="inlineCheckbox2" value="false">
                    <label class="form-check-label" for="inlineCheckbox2">No</label>
                </div>
                <br>
                <br>
                <div class="form-group">
                    <label for="exampleInputChronicCon1">Chronic Conditions</label>
                    <input type="chronic" class="form-control" id="chronic-condition" placeholder="Chronic Conditions">
                    <br>
                    <button id="student-form" type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>